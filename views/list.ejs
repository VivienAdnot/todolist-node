<h1>todo list</h1>

<ul>
    <% for (var i = 0; i < todos.length; i++) { %>
    <li>
        <a href="/delete/<%= + i %>">x</a>
        <%= todos[i] %>
    </li>
    <% } %>
</ul>

<form action="/create" method="post">
    New todo:<br/>
    <input type="text" name="todo" value="new todo">
    <input type="submit" value="submit">
</form>
